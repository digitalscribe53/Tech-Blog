    <section>
        <form id="login-form" class="post">
            <h2 class="post-title">Login</h2>
            <input type="text" id="username-login" name="username" placeholder="Username" required>
            <input type="password" id="password-login" name="password" placeholder="Password" required>
            <button type="submit" class="nav-button">Login</button>
            <p id="login-error-message" style="display:none;"></p>
            <a href="/signup">Don't have an account? Sign up here.</a>
        </form>
    </section>
</main>

