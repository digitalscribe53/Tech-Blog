{{> header}}

<main>
    <section>
        <h2>Your Dashboard</h2>
        {{#if posts.length}}
            {{#each posts}}
                <article>
                    <h3>{{title}}</h3>
                    <p>{{createdAt}}</p>
                    <p>{{content}}</p>
                    <a href="/dashboard/edit/{{id}}">Edit</a>
                </article>
            {{/each}}
        {{else}}
            <p>No posts yet. Create a new post to get started!</p>
        {{/if}}
        <button id="new-post">New Post</button>

        <!-- New Post Form -->
        <form id="new-post-form" style="display: none;">
            <input type="text" id="post-title" name="title" placeholder="Post Title" required>
            <textarea id="post-content" name="content" placeholder="Post Content" required></textarea>
            <button type="submit">Submit Post</button>
        </form>
    </section>
</main>

{{> footer}}
