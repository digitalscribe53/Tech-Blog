<main>
    <section>
        <h2 class="post-title">Your Dashboard</h2>
        {{#if posts.length}}
            <div class="post-list">
                {{#each posts}}
                    <article class="post">
                        <h3 class="post-title">{{title}}</h3>
                        <div class="post-meta">
                            <span>Posted on {{format_date createdAt}}</span>
                        </div>
                        <div class="post-content">
                            <p>{{content}}</p>
                        </div>
                        <div class="post-actions">
                            <a href="/dashboard/edit/{{id}}" class="nav-button">Edit</a>
                            <button class="nav-button delete-post" data-id="{{id}}">Delete</button>
                        </div>
                    </article>
                {{/each}}
            </div>
        {{else}}
            <p>No posts yet. Create a new post to get started!</p>
        {{/if}}

        <button id="new-post" class="nav-button">New Post</button>

        <!-- New Post Form -->
        <form id="new-post-form" style="display: none;" class="post">
            <h3 class="post-title">Create New Post</h3>
            <input type="text" id="post-title" name="title" placeholder="Post Title" required>
            <textarea id="post-content" name="content" placeholder="Post Content" required></textarea>
            <button type="submit" class="nav-button">Submit Post</button>
        </form>
    </section>
</main>

<!-- Delete Confirmation Modal -->
<div id="delete-modal" class="modal" style="display: none;">
    <div class="modal-content">
        <h2>Confirm Deletion</h2>
        <p>Are you sure you want to delete this post?</p>
        <div class="modal-actions">
            <button id="confirm-delete" class="nav-button">Delete Post</button>
            <button id="cancel-delete" class="nav-button">Cancel</button>
        </div>
    </div>
</div>

{{> footer}}

<script src="/js/dashboard.js"></script>