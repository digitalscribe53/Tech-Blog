<main>
    <section>
        <h2 class="post-title">Your Dashboard</h2>
        {{#if posts.length}}
            {{#each posts}}
                <article class="post">
                    <h3 class="post-title">{{title}}</h3>
                    <div class="post-meta">
                        <span>Posted on {{format_date createdAt}}</span>
                    </div>
                    <div class="post-content">
                        <p>{{content}}</p>
                    </div>
                    <a href="/dashboard/edit/{{id}}" class="nav-button">Edit</a>
                </article>
            {{/each}}
        {{else}}
            <p>No posts yet. Create a new post to get started!</p>
        {{/if}}

        <button id="new-post" class="nav-button">New Post</button>

        <!-- New Post Form -->
        <form id="new-post-form" style="display: none;" class="post">
            <h3 class="post-title">Create New Post</h3>
            <input type="text" id="post-title" name="title" placeholder="Post Title" required>
            <textarea id="post-content" name="content" placeholder="Post Content" required></textarea>
            <button type="submit" class="nav-button">Submit Post</button>
        </form>
    </section>
</main>

{{> footer}}